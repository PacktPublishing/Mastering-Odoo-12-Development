<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="school_group_form_view_inherit_mail_school" model="ir.ui.view">
      <field name="name">school.group.form.inherit.mail.school</field>
      <field name="model">school.group</field>
      <field name="inherit_id" ref="school.group_view_form"/>
      <field name="arch" type="xml">
          <xpath expr="//sheet" position="after">
              <div class="oe_chatter">
                  <field name="message_follower_ids" widget="mail_followers"/>
                  <field name="message_ids" widget="mail_thread"/>
              </div>
          </xpath>
      </field>
  </record>
</odoo>
<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record model="res.partner" id="base.partner_admin">
    <field name="teacher">True</field>
  </record>

  <record model="school.option" id="option1">
    <field name="name">Science</field>
  </record>

  <record model="school.option" id="option2">
    <field name="name">Arts</field>
  </record>

  <record model="school.option" id="option3">
    <field name="name">Literature</field>
  </record>

  <record model="school.group" id="group1A">
    <field name="name">1A</field>
    <field name="supervisor_id" ref="base.partner_admin"/>
  </record>

  <record model="school.group" id="group1B">
    <field name="name">1B</field>
    <field name="supervisor_id" ref="base.partner_admin"/>
  </record>

  <record model="school.group" id="group2A">
    <field name="name">2A</field>
    <field name="supervisor_id" ref="base.partner_admin"/>
  </record>

 <record model="res.partner" id="student1">
  <field name="name">John Smith</field>
  <field name="student">True</field>
  <field name="school_group_id" ref="school.group1A"/>
  <field name="option_ids" eval="[(4, ref('school.option1')), (4, ref('school.option2'))]"/>
  <field name="inscription_date" eval="DateTime.today() - relativedelta(months=4)"/>
 </record>

 <record model="res.partner" id="student2">
  <field name="name">Jane Smith</field>
  <field name="student">True</field>
  <field name="school_group_id" ref="school.group1A"/>
  <field name="option_ids" eval="[(4, ref('school.option1'))]"/>
  <field name="inscription_date" eval="DateTime.today() - relativedelta(months=4)"/>
 </record>

 <record model="res.partner" id="student3">
  <field name="name">Jack Doe</field>
  <field name="student">True</field>
  <field name="school_group_id" ref="school.group1B"/>
  <field name="option_ids" eval="[(4, ref('school.option3'))]"/>
 </record>

 <record model="res.partner" id="student4">
  <field name="name">Smith Jones</field>
  <field name="student">True</field>
  <field name="student_type">free</field>
  <field name="school_group_id" ref="school.group2A"/>
  <field name="option_ids" eval="[(4, ref('school.option3')), (4, ref('school.option2'))]"/>
 </record>

</odoo>

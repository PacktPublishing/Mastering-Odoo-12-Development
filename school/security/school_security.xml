<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data noupdate="1">
    <record id="group_user" model="res.groups">
      <field name="name">User</field>
      <field name="category_id" ref="base.module_category_school"/>
      <field name="users" eval="[(4, ref('base.user_admin'))]"/>
      <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
    </record>
    <record id="group_manager" model="res.groups">
      <field name="name">Manager</field>
      <field name="category_id" ref="base.module_category_school"/>
      <field name="users" eval="[(4, ref('base.user_admin'))]"/>
      <field name="implied_ids" eval="[(4, ref('school.group_user'))]"/>
    </record>

    <record id="school_group_user_rule" model="ir.rule">
      <field name="name">School User</field>
      <field name="model_id" ref="model_school_group"/>
      <field name="domain_force">[('supervisor_id','=',user)]</field>
      <field name="perm_read" eval="True"/>
      <field name="perm_write" eval="False"/>
      <field name="perm_create" eval="False"/>
      <field name="perm_unlink" eval="False"/>
      <field name="groups" eval="[(4, ref('school.group_user'))]"/>
    </record>

    <record id="school_group_manager_rule" model="ir.rule">
      <field name="name">School Manager</field>
      <field name="model_id" ref="model_school_group"/>
      <field name="domain_force">[(1,'=',1)]</field>
      <field name="perm_read" eval="True"/>
      <field name="perm_write" eval="True"/>
      <field name="perm_create" eval="True"/>
      <field name="perm_unlink" eval="True"/>
      <field name="groups" eval="[(4, ref('school.group_manager'))]"/>
    </record>
  </data>
</odoo>

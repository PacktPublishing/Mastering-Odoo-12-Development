<?xml version="1.0" encoding="utf-8"?>
<template xml:space="preserve">
  <t t-name="SchoolStudents">
    <div class="o_content">
      <div class="o_school_students">
        <div>
          <h1>Welcome, <t t-esc="widget.teacher_name"/></h1>
          <h3>Your Students</h3>
          <ul class="list-unstyled">
            <li class="mb8" t-foreach="widget.students" t-as="student">
              <a class="o_school_student" href="#" t-att-data-student-id="student.id">
                <t t-if="student.image_small">
                  <img class="rounded-circle o_school_student_avatar" t-attf-src="data:image/png;base64, {{ student.image_small }}" t-att-alt="student.name" />
                </t>
                <t t-else="">
                  <img class="rounded-circle o_school_student_avatar" src="/base/static/img/avatar.png" alt="No picture for this student"/>
                </t>
                <span class="text-bold" t-esc="student.name"/>
                </a>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </t>
</template>